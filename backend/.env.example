PORT=5001
JWT_SECRET=votre_secret_jwt_changez_moi_en_production
DATABASE_PATH=./database.db

# ==============================================
# ENRICHISSEMENT AUTOMATIQUE - API KEYS
# ==============================================

# API INSEE SIRENE (Données officielles des entreprises françaises)
# Authentification: API Key simple (X-INSEE-Api-Key-Integration header)
# Portail: https://portail-api.insee.fr/
INSEE_API_KEY=e730f3cb-de07-47b3-b0f3-cbde07c7b306
# INSEE_API_SECRET n'est plus nécessaire (nouvelle authentification)

# API BAN (Base Adresse Nationale)
# Gratuite, sans clé API
# Documentation: https://adresse.data.gouv.fr/api-doc/adresse
BAN_API_URL=https://api-adresse.data.gouv.fr
BAN_RATE_LIMIT=50

# API DPE ADEME - IDs datasets 2025 (mis à jour)
# Gratuite, Open Data
# Documentation: https://data.ademe.fr
DPE_DATASET_TERTIAIRE=dpe01tertiaire
DPE_DATASET_LOGEMENTS=dpe03existant
DPE_DATASET_NEUFS=dpe02neufs

# API BDNB (Base de Données Nationale des Bâtiments)
# Plan: Open (100k requêtes/mois) - OPTIONNEL
# Portail: https://bdnb.io/
# API Documentation: https://api.bdnb.io/v1/bdnb
BDNB_API_URL=https://api.bdnb.io/v1/bdnb
# BDNB_API_KEY=  # Optionnel - ajouter si disponible dans ton portail BDNB

# API Pappers (Contacts entreprises - téléphone, email)
# Plan gratuit: 100 requêtes/mois
# Portail: https://www.pappers.fr/api
PAPPERS_API_KEY=f84f6c5e0ebc2fdfbcf0e4cf69fcd306d81622d3cebd374d

# ==============================================
# CONFIGURATION AVANCÉE (Optionnel)
# ==============================================

# Rate limiting (requêtes par seconde)
# SIRENE_RATE_LIMIT=30
# BDNB_RATE_LIMIT=10
# DPE_RATE_LIMIT=10

# Redis (cache distribué - optionnel)
# Si non configuré, utilise cache en mémoire
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Enrichissement automatique
AUTO_ENRICHMENT_ENABLED=true
ENRICHMENT_SOURCES=sirene,ban,dpe  # Sources activées (BDNB optionnel)

# API RNB (Référentiel National des Bâtiments)
# Gratuite, sans clé API
# Documentation: https://rnb-fr.gitbook.io/documentation/
RNB_API_URL=https://rnb-api.beta.gouv.fr/api/alpha
RNB_RATE_LIMIT=20

# API Géorisques ICPE (Installations Classées)
