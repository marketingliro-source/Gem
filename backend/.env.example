# ========================================
# CONFIGURATION CRM GEM ISOLATION
# ========================================

# Port du serveur
PORT=5000

# Secret JWT pour authentification
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ========================================
# REDIS CACHE CONFIGURATION
# ========================================
# Redis pour cache et rate limiting
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# TTL par défaut pour le cache (en secondes)
CACHE_TTL=3600

# ========================================
# APIs EXTERNES - TIER 1 (GRATUITES)
# ========================================

# API SIRENE INSEE (https://portail-api.insee.fr/)
# Inscription gratuite requise
INSEE_API_KEY=your_insee_api_key
INSEE_API_SECRET=your_insee_api_secret
INSEE_BASE_URL=https://api.insee.fr/entreprises/sirene/V3.11

# API Recherche Entreprises (data.gouv.fr)
# Pas de clé requise, mais rate limiting appliqué
RECHERCHE_ENTREPRISES_URL=https://recherche-entreprises.api.gouv.fr

# API DPE ADEME (data.ademe.fr)
# Open Data - pas de clé requise
DPE_API_URL=https://data.ademe.fr/data-fair/api/v1/datasets

# BDNB API (bdnb.io)
# Inscription gratuite pour API Open
BDNB_API_KEY=your_bdnb_api_key
BDNB_API_URL=https://bdnb.io/api/v2

# ========================================
# APIs EXTERNES - TIER 2 (FREEMIUM)
# ========================================

# Pappers API (optionnel - 100 requêtes/mois gratuites)
# https://www.pappers.fr/api
PAPPERS_API_KEY=your_pappers_api_key
PAPPERS_API_URL=https://api.pappers.fr/v2

# ========================================
# APIs EXTERNES - TIER 3 (PAYANTES - OPTIONNEL)
# ========================================

# API Enrichissement Téléphonique (optionnel)
# Exemples: API-datastore, Kaspr, etc.
PHONE_ENRICHMENT_ENABLED=false
PHONE_API_KEY=your_phone_api_key
PHONE_API_URL=

# ========================================
# RATE LIMITING
# ========================================

# Nombre de requêtes max par IP par fenêtre de temps
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rate limiting pour APIs externes (requêtes/seconde)
SIRENE_RATE_LIMIT=30
DPE_RATE_LIMIT=10
BDNB_RATE_LIMIT=10
PAPPERS_RATE_LIMIT=2

# ========================================
# ENRICHISSEMENT
# ========================================

# Activer/désactiver enrichissement automatique
AUTO_ENRICHMENT_ENABLED=true

# Sources d'enrichissement (comma-separated)
# Options: sirene,dpe,bdnb,pappers
ENRICHMENT_SOURCES=sirene,dpe,bdnb

# ========================================
# MODULE PROSPECTION
# ========================================

# Nombre max d'entreprises retournées par recherche
PROSPECTION_MAX_RESULTS=1000

# Activer export CSV/Excel
PROSPECTION_EXPORT_ENABLED=true
